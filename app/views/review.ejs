<html ng-app='ratemyself'>

<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
 <script src="controllers/review.js"></script>

<head>
	<title>Post A review</title>
</head>
<body>
</body>
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="">RateMyself</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
      <li><a href="/register">Register</a></li>
      <li><a class = "active"><a href="/review">Review</a></li>

    </ul>
  </div>
</nav>

<div ng-app="ratemyself">
  <form>
    First Name: <input type="text" class = "form-control" ng-model="firstname">
    Last Name: <input type = "text" class = "form-control" ng-model="rating.lastname">
    Description: <input type = "text"  class = "form-control" ng-model="rating.description">
    Rating: <input type = "number"  class = "form-control" ng-model="rating.rating" min = "1" max = "5">
    <button type="submit" ng-click="register(rating.firstname, rating.lastname, rating.description, rating.rating)" class="btn btn-default">Submit</button>
  </form>
  <h1>You entered First Name: {{firstname}}</h1>
  <h1>You entered Last Name: {{rating.lastname}}</h1>
  <h1>You entered Description: {{rating.description}}</h1>
  <h1>You entered Rating: {{rating.rating}}</h1>
</div>

</html>
