<!-- index.html -->
<!DOCTYPE html>
<html ng-app="ratemyself">
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="index.js"></script>

        <!-- CSS ===================== -->
        <!-- load bootstrap -->
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
</head>

<body>

    <div ng-controller="searchController">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="">RateMyself</a>
            </div>
            <ul class="nav navbar-nav">
              <li class="active"><a href="/">Home</a></li>
              <li><a href="/register">Register</a></li>
            </ul>

            <div class="col-sm-3 col-md-3">
                  <form class="navbar-form" role="search">
                  <div class="input-group">
                      <input type="text" class="form-control" placeholder="Search" ng-model="name" ng-keyup="search()">
                      <div class="input-group-btn">
                          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                      </div>
                  </div>
                  </form>

              </div>
          </div>
        </nav>

        <div>
            <div class="dropdown">
                <ul>
                    <li ng-repeat="user in query" ng-click="selectItem(user)" ng-if="query.length > 0">
                        <div ng-click="select(user)">{{user.name}}</div>
                        <i class="glyphicon glyphicon-ok" ng-show="isActive(user)"></i>
                    </li>
                    <li ng-if="values.length == 0">
                        No Records
                    </li>
                </ul>
            </div>
        </div>

    </div>

    <div class="container" ng-controller="homeController" ng-init="reload()">
        <table>
            <tr>
                <th>UID</th>
                <th>NAME</th>
                <th>DESCRIPTION</th>
            </tr>
            <tr ng-repeat="user in users">
                <td>{{user.uid}}</td>
                <td>{{user.name}}</td>
                <td>{{user.description}}</td>
            </tr>
        </table>
    </div>
</body>

<!-- Angular -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
<script src="controllers/index.js"></script>

</html>
